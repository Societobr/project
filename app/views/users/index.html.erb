<% content_for :head do %>
  <head>
  <!-- Basic Page Needs
    ================================================== -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title> <%= full_title("Listar Parceiros") %></title>
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <!-- Mobile Specific Metas
      ================================================== -->
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <!-- CSS
      ================================================== -->
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <!-- SCRIPTS
      ================================================== -->
  </head>
<% end %>

<h2>Parceiros</h2>

<div class="table-responsive">
  <table id="datatable" class="table table-striped table-hover text-center">
    <thead>
      <tr>
        <th>Usu√°rio</th>
        <th>Senha</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |usuario| %>
        <tr>
          <td><%= usuario.username %></td>
          <td><%= usuario.password_digest %></td>
          <td><%= link_to icon("search-plus", '', class: "fa-2x", title: "Consultar"), usuario %></td>
          <td><%= link_to icon("pencil-square", '', class: "fa-2x", title: "Editar"), edit_user_path(usuario) %></td>
          <td><%= link_to icon("trash-o", '', class: "fa-2x", title: "Excluir"), usuario, method: :delete, data: { confirm: 'Deletar registro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Cadastrar', new_user_path, class: 'btn btn-primary' %>