<% content_for :head do %>
  <head>
  <!-- Basic Page Needs
    ================================================== -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title> <%= full_title("Listar Clientes") %></title>
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <!-- Mobile Specific Metas
      ================================================== -->
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <!-- CSS
      ================================================== -->
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <!-- SCRIPTS
      ================================================== -->
  </head>
<% end %>

<h2>Atividades</h2>

<div class="row">
    <%= render partial: 'messages' %>
</div>

<%= form_tag atividades_path do %>
  <div class="row">
    <div class="form-group">
      <div class="col-md-6 col-sm-6">
        <%= text_field_tag :parceiro, nil, {id: "Parceiro", class: "form-control input-lg", placeholder: "Parceiro", value: @parc_nome} %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <div class="col-md-3 col-sm-3">
        <%= text_field_tag :de, nil, {id: "de", class: "form-control input-lg", placeholder: "De", value: @de.strftime("%d/%m/%Y")} %>
      </div>
      <div class="col-md-3 col-sm-3">
        <%= text_field_tag :ate, nil, {id: "ate", class: "form-control input-lg", placeholder: "Até", value: @ate.strftime("%d/%m/%Y")} %>
      </div>
    </div>
  </div>

  <%= submit_tag "Filtrar", {class: "btn btn-primary btn-lg"} %>
  <%= submit_tag "Gerar Relatório", {class: "btn btn-primary btn-lg"} %>
<% end %>

<br />
<hr>
<br />

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>CLIENTE</th>
        <th>PARCEIRO</th>
        <th>TOTAL</th>
        <th>DESCONTO</th>
        <th>PAGO</th>
        <th>DATA (AAAA/MM/DD)</th>
      </tr>
    </thead>

    <tbody>
      <% @atividades.each do |atividade| %>
        <tr>
          <td><%= atividade.cliente.nome if atividade.cliente %></td>
          <td><%= atividade.user.username if atividade.user %></td>
          <td><%= number_to_currency(atividade.preco_total, :unit => "R$ ", :separator => ",", :delimiter => ".") %></td>
          <td><%= number_to_currency(atividade.valor_desconto, :unit => "R$ ", :separator => ",", :delimiter => ".") %></td>
          <td><%= number_to_currency(atividade.preco_total - atividade.valor_desconto, :unit => "R$ ", :separator => ",", :delimiter => ".") %></td>
          <td><%= atividade.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
  $('#de').mask('99/99/9999');
  $('#ate').mask('99/99/9999');
</script>